<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Ecommerce" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">?attr/colorSurfaceContainerLowest</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">?attr/colorSurfaceContainerLowest</item>

    </style>

    <style name="Theme.Ecommerce" parent="Base.Theme.Ecommerce">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:includeFontPadding">false</item>
        <item name="bottomNavigationStyle">@style/Widget.Material3.BottomNavigationView</item>
    </style>

    <style name="DialogTheme" parent="Base.Theme.Ecommerce">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>

        <item name="postSplashScreenTheme">@style/Theme.Ecommerce</item>
    </style>

    <style name="TextAppearance.AppBar" parent="">
        <item name="titleCentered">true</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="Chip" parent="Base.Theme.Ecommerce">
        <item name="fontFamily">@font/poppins</item>

    </style>

    <style name="TextAppearance.Design.Hint." parent="">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.AppCompat.Caption." parent="">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ChipFont" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheetModal" parent="Widget.Material3.BottomSheet.Modal">
        <item name="android:backgroundTint">?attr/colorSurfaceContainerLowest</item>
    </style>

</resources>